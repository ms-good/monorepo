{
  "extends": "../../../tsconfig.json",

  "compilerOptions": {
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "jsxImportSource": "@emotion/react",

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "types", "./storybook/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
