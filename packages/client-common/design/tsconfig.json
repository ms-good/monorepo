{
  "extends": "../../../tsconfig.json",

  "compilerOptions": {
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx",

    "jsxImportSource": "@emotion/react",

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "./tailwind.config.ts", "./jest.setup.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
